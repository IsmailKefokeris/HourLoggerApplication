<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Tracker Creator</title>

        <link rel="stylesheet" type="text/css" href="css/style.css"/>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    </head>
    <body>
        <%- include('common/header'); -%>

        <section class="login-clean">
            <% if (errors) {%>
                <h2><%= errors %></h2>
            <% } %>
            <form method="post" action="/create-tracker">
                <h2 class="visually-hidden">Create new work entry!</h2>
                <div class="mb-3">
                    <label for="userID">UserID</label>
                    <input type="text" class="form-control" id="userID" name="userID" placeholder="<%= user.id %>" disabled>
                </div>
                <div class="form-group">
                    <label for="exampleFormControlSelect2">Select Job</label>
                    <select multiple class="form-control" id="exampleFormControlSelect2" name="jobName">
                        <% if(jobs.length > 0) { %>
                            <% jobs.forEach(job => { %>
                                <option value="<%= job.id %>"><%= job.name %></option>
                            <% }); %>
                        <% } else { %>
                            <option>New Job needs to be created!</option>
                        <% } %>
                    </select>
                </div>
                
                <div class="mb-3 date-section">
                    <label for="Date">Date Worked</label>
                    <input type="date" class="form-control" id="Date" name="date" max="<%= maxDate %>">
                </div>

                <div class="mb-3 time-section">
                    <label for="StartTime">Start Time</label>
                    <input type="time" class="form-control" id="StartTime" name="startTime">
                </div>

                <div class="mb-3 time-section">
                    <label for="EndTime">End Time</label>
                    <input type="time" class="form-control" id="EndTime" name="endTime">
                </div>

                <div class="mb-3">
                    <button class="btn btn-primary d-block w-100" type="submit">Create!</button>
                </div>
            </form>
        </section>
        
    </body>

    <script type="text/javascript" src="scripts/jobSelector.js"></script>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</html>